<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/topbar</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="recyclertest">
        <item name="android:background">@color/background</item>
    </style>

    <style name="cards">
        <item name="android:background">@color/middlelayer</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/middlelayer</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NakedWalletTheme" parent="FullscreenTheme">
        <item name="colorPrimary">@color/nakedwallet_consistent</item>
        <item name="android:statusBarColor">@color/nakedwallet_consistent</item>
    </style>

    <style name="ExchangeTheme" parent="FullscreenTheme">
        <item name="colorPrimary">@color/exchange_consistent</item>
        <item name="android:statusBarColor">@color/exchange_consistent</item>
    </style>

    <style name="TransactionTheme" parent="FullscreenTheme">
        <item name="colorPrimary">@color/transaction_consistent</item>
        <item name="android:statusBarColor">@color/transaction_consistent</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">22dp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="InfoTextTitle">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/droidsansmono</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="LargeInfoTextTitle">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/droidsansmono</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="InfoTextNormal">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/droidsansmono</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="LabelTextNormal">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="GuideText">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/droidsansmono</item>
        <item name="android:textSize">9dp</item>
    </style>

    <style name="ButtonGeneral" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/droidsansmono</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/buttongeneral</item>
    </style>

</resources>
