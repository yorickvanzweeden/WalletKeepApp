<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.walletkeep.walletkeep">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WalletKeepApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.IntroSlider"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:label="@string/title_activity_introslider" />

        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.walletkeep.walletkeep.ui.portfolio.PortfolioActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.portfolio.PortfolioActivity"
            android:label="@string/title_activity_portfolio"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.wallet.WalletActivity"
            android:label="@string/title_activity_wallet"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.walletkeep.walletkeep.ui.main.MainActivity" />
        </activity>

        <activity android:name=".ui.wallet.EditWalletActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.walletkeep.walletkeep.ui.wallet.WalletActivity" />
        </activity>
        <activity
            android:name=".ui.asset.AssetActivity"
            android:label="@string/title_activity_assets"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.walletkeep.walletkeep.ui.main.MainActivity" />
        </activity>
    </application>

</manifest>